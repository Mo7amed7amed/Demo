@model IEnumerable<Demo.Models.Course>

    <div class="container">
        <h2>Courses List</h2>
        <hr />
        <p>
            @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CrsName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CrsName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CrsId }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CrsId }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CrsId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>

